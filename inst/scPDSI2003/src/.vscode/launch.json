    "version": "0.2.0",
    "configurations": [
        {
            "name": "rtools build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../scpdsi.exe", // ${fileDirname}\\${fileBasenameNoExtension}
            "args": [""],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Rtools\\mingw_64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "rtools build"
        }
    ]
}